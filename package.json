{
  "name": "kanban-desktop-preview",
  "version": "2.0.0",
  "description": "Kanban Desktop Electron Based Preview",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "AI",
    "Kanban"
  ],
  "author": "JimHan",
  "license": "GPL",
  "build": {
    "productName": "Kanban-Desktop",
    "appId": "com.Zerolite.Kanban-Desktop",
    "copyright": "2022 Zerolite Studio All Rights Reserved.",
    "asar": true,
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis"
        }
      ],
      "icon": "./assets/app.ico",
      "asarUnpack": [
        "src/**",
        "README.md"
      ]
    },
    "nsis": {
      "oneClick": false, 
      "allowElevation": true, 
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./install.ico",
      "uninstallerIcon": "./install.ico",
      "installerHeaderIcon": "./assets/app.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Kanban-Desktop"
    }
  },
  "devDependencies": {
    "electron": "16.0.7"
  }
}
